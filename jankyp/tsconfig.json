{
    "include": [
        "src",
    ],
    "exclude": [
        "dist"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "lib": ["es2020"],
        "target": "ES2020",
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "declaration": true,
    }
}